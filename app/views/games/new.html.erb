<h1>Games</h1>
<h2> New game</h2>
      <div class="flexbox">
        <% letters = "" %>
          <% @letters.each do |letter| %>
            <% letters += letter %>
              <div class="letter">
                <%= letter %>
              </div>
              <% end %>
      </div>
<br>
      <p>What's the longest word you can find? </p>
      <form action="/score" method="games">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <div class="input-group">
            <input type="text" class="form-control" name="word">
            <div class="input-group-append">
              <button class="btn btn-primary" type="submit">Play</button>
            </div>
            <input name="letters" type="hidden" value=<%= "#{letters}" %>>
          </div>
      </form>
    </div>
    <div class="col">
    </div>
</div>
